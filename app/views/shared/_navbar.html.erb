<nav class="navbar navbar-dark navbar-expand-md bg-dark py-3">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "campingnb.ico", style: "width: 50px; height: 50px", class: 'mb-1' %>
      <% end %>
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navcol-5">
          <span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span>
        </button>
        <div id="navcol-5" class="collapse navbar-collapse">
          <!-- Items Navbar -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <!-- search bar -->
                <%= form_with url: camps_path, method: :get do %>
                  <%= text_field_tag :query,
                    params[:query],
                    placeholder: "Find a Camp"
                  %>
                  <%= submit_tag "Search", class: "btn btn-primary", style: 'padding: 3px 8px;margin-left: 3px;' %>
                <% end %>
                <!-- search bar end -->
              </li>
