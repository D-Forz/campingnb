            <!--My Bookings if the user have any booking -->
              <% if current_user.bookings.any? %>
                <li class="nav-item"><%= link_to "My Bookings", bookings_path, class: "nav-link" %></li>
              <% end %>
              <li class="nav-item">
                <%= link_to "Camps", camps_path, class: "nav-link" %>
              </li>
              <% if policy(Camp).my_camps? %>
              <li class="nav-item">
                <%= link_to "My Camps", my_camps_camps_path, class: "nav-link" %>
              </li>
              <% end %>
              <li class="nav-item">
                <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Camps", camps_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: "nav-link active" %>
