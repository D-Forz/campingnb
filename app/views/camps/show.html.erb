<div class="row justify-content-center">
  <div class="col-12 align-self-center">
    <div class="row row-cols-2 mt-3">
      <div style="width: 100%; height: 450px; background-color: #000000;" class="m-3">
        </div>
      <div class="col-7">
        <h2><%= @camp.name %></h2>
        <p><%= @camp.description %></p>
        <p><%= @camp.price %>â‚¬</p>
        <p><%= @camp.capacity %> places</p>
        <hr>
        <h3>Location</h3>
        <p><%= @camp.location %></p>
      </div>
      <div class="col-5">
        <span>Create Booking</span>
        <%= link_to "Book Now", new_camp_booking_path(@camp), class: 'btn btn-primary'%>
        <p>formulario para buscar fechas y llevar a la reserva</p>
      </div>
    </div>
    <div class="row mt-3">
    <hr>
      <h2>Reviews</h2>
      <% @camp.reviews.each do |review| %>
        <p><%= review.content %></p>
        <p><%= review.rating %></p>
      <% end %>

      <% if policy(Review).create? %>
        <%= simple_form_for [ @camp, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.button :submit %>
        <% end %>
      <% else %>
        <p>Create a booking to leave a review</p>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_camp_path(@camp) %>
