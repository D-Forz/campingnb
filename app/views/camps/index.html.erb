<div class="row row-cols-1 row-cols-md-2 g-4">
<% @camps.each do |camp| %>
  <div class="col">
    <div class="card">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
      <h5 class="card-title"><%= link_to camp.name, camp_path(camp) %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
    </div>
  </div>
<% end %>
</div>
